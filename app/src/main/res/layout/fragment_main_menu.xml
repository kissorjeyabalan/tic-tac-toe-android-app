<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="no.woact.jeykis16.ui.fragment.MainMenuFragment">

    <TextView
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:id="@+id/hfFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MainMenuFragment" />

    <Button
        android:id="@+id/openHighScoreBtn"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/hfFrag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="swap to high score" />

</android.support.constraint.ConstraintLayout>
